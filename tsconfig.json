{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "target": "ES2018",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "module": "commonjs",
    "isolatedModules": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "rootDir": "./",
    "paths": {
      "~/*": ["./app/*"]
    },
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "app/http/controllers/controller.ts", "app/http/controllers/HomeController.ts", "routes/web/home.ts", "routes/web/index.ts", "app/index.ts", "server.ts"],
  "exclude": ["node_modules"]
}
